<h1>Movies List</h1>
{{#each movies}}
<div>
    <h2>
        {{this.title}}
    </h2>
    <img src="{{this.poster}}" alt="">
    <p>
        Year: {{this.year}}
    </p>
    <p>
        Director: {{this.director}}
    </p>
    <ul>
        {{#each this.genre}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
</div>
{{/each}}